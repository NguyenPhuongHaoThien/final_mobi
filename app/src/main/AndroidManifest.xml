<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pro.movieFinalApp">

    <uses-configuration android:name="android.pemission.INTERNET" />
    <uses-configuration android:name="android.pemission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.pro.movieFinalApp.MyApplication"
        android:allowBackup="false"
        tools:replace="android:allowBackup"
        android:fitsSystemWindows="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity
            android:exported="true"
            android:name="com.pro.movieFinalApp.activity.Splash">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:exported="false"
            android:name="com.pro.movieFinalApp.activity.MainActivity" />

        <activity
            android:exported="false"
            android:name="com.pro.movieFinalApp.activity.PlayMovie"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:exported="false"
            android:name="com.pro.movieFinalApp.activity.SignIn" />

        <activity
            android:exported="false"
            android:name="com.pro.movieFinalApp.activity.SignUp" />

        <activity
            android:exported="false"
            android:name="com.pro.movieFinalApp.activity.ForgotPassword" />

        <activity
            android:exported="false"
            android:name="com.pro.movieFinalApp.activity.ChangePassword" />
    </application>

</manifest>